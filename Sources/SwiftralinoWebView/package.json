{
    "name": "swiftralino-webview",
    "version": "0.1.0",
    "description": "Modern WebView frontend for Swiftralino - TypeScript/React with multi-runtime support",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "dev:node": "node --loader tsx src/server/node.ts",
        "dev:deno": "deno run --allow-net --allow-read src/server/deno.ts",
        "dev:bun": "bun src/server/bun.ts",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "type-check": "tsc --noEmit",
        "check-all": "npm run type-check && npm run lint && npm run format:check"
    },
    "dependencies": {
        "@tanstack/react-query": "^5.51.23",
        "clsx": "^2.1.1",
        "lucide-react": "^0.427.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwind-merge": "^2.5.2",
        "zustand": "^5.0.6"
    },
    "devDependencies": {
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.37.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.7",
        "postcss": "^8.4.40",
        "prettier": "^3.3.3",
        "tailwindcss": "^3.4.7",
        "tsx": "^4.16.2",
        "typescript": "^5.2.2",
        "vite": "^7.0.5",
        "vitest": "^2.0.5"
    },
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    },
    "packageManager": "bun@1.1.21"
}
